{
  "manifest_version": 3,
  "name": "Subly",
  "version": "0.1.0",
  "description": "Subscription manager in a Chrome Side Panel for Google Calendar.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_title": "Subly",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "permissions": ["sidePanel", "storage", "alarms", "notifications"],
  "host_permissions": ["https://calendar.google.com/*"],
  "background": {
    "service_worker": "ext-background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["ext-content.js"],
      "run_at": "document_idle"
    }
  ]
}
